@using BotDetect.Web.UI.Mvc;
@model Web.Models.Track

<div class="row">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <fieldset>
                <h4>Suggest Music</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.ArtistName, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Artist")
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ArtistName, new { htmlAttributes = new { @class = "form-control", @id = "artistName" } })
                        @Html.ValidationMessageFor(model => model.ArtistName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TrackName, htmlAttributes: new { @class = "control-label col-md-2" }, labelText: "Track")
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TrackName, new { htmlAttributes = new { @class = "form-control", @id = "trackName" } })
                        @Html.ValidationMessageFor(model => model.TrackName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="control-label col-md-2">
                        <b>
                            Please enter captcha string
                        </b>
                    </div>
                    <div class="col-md-10">
                        @{ var sampleCaptcha = new MvcCaptcha("SampleCaptcha"); }
                        @Html.Captcha(sampleCaptcha)
                        @Html.TextBox("CaptchaCode")
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Suggest Music" class="btn btn-default" />
                    </div>
                </div>
            </fieldset>
        </div>
    }
</div>