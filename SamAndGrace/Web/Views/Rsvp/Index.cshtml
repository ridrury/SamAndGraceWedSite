@model IEnumerable<Web.Models.Rsvp>

<div class="row">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Attending)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequiresTransport)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DietryRequirements)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Attending)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequiresTransport)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DietryRequirements)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>